{
	"name": "one-extension",
	"displayName": "one-extension",
	"description": "have a try",
	"version": "0.0.1",
	"publisher": "swatDong",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "one-extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "one-extension.precheck",
				"title": "Pre Check"
			}
		],
		"taskDefinitions": [
			{
				"type": "one",
				"required": [
					"command"
				],
				"properties": {
					"command": {
						"type": "string"
					},
					"args": {
						"type": "object"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.2.4",
		"vscode-test": "^1.5.2"
	}
}